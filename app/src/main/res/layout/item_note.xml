<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@color/background_color">

    <View
        android:id="@+id/item_note_color_view"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        />
    <LinearLayout
    android:id="@+id/item_note_lin_lay_texts"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_note_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_gravity="center|top"
        />

    <TextView
        android:id="@+id/item_note_textview_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bbhdbkjsjcdbjvbjbjbjrbfjhbjcnjsnfwjkrnknkjnkjndknvkn"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/item_note_textview_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:layout_gravity="bottom|right"
        />

</LinearLayout>

    <CheckBox
        android:id="@+id/item_note_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"/>



</LinearLayout>
